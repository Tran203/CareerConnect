<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>app.web.careerconnect.controller.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountLoginServlet</servlet-name>
        <servlet-class>app.web.careerconnect.controller.AccountLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindMentorServlet</servlet-name>
        <servlet-class>app.web.careerconnect.controller.FindMentorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindMenteeServlet</servlet-name>
        <servlet-class>app.web.careerconnect.controller.FindMenteeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/CreateAccountServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountLoginServlet</servlet-name>
        <url-pattern>/AccountLoginServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindMentorServlet</servlet-name>
        <url-pattern>/FindMentorServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindMenteeServlet</servlet-name>
        <url-pattern>/FindMenteeServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error_pages/file_not_found.jsp</location>
    </error-page>
</web-app>
